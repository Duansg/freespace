---
interface Props {
    date: string | Date;
    clase: string
}
const {date: dateProp, clase} = Astro.props;
const date = typeof dateProp === 'string' ? new Date(dateProp) : dateProp;
---

<time class={clase} datetime={date.toISOString()}>
    {
        date.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
        })
    }
</time>